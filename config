# MPD Settings
mpd_music_dir = "~/music/"

# Format
#
# Options are %: 
# l (length), f (filename), D (dir), a (artist), A (album artist)
# t (title), b (album), y (year), n (track no.), N (full track info)
# g (genre), c (composer), p (performer), d (disk), C (comment)
# And $R for begin of right alignment
#
# Colors are $:
# 0 (default), 1 (black), 2 (red), 3 (green), 4 (yellow), 5 (blue)
# 6 (magenta), 7 (cyan), 8 (white), 9 (end current color)
# 
# Other options:
# {} (optional tag), b (bold), u (UL), r (reverse colors), a (alt char.)

#song_list_format = "$4%a $4»$7»$4» $5{%t}|{%f} (%l) $R{$4%b}{ « $7%y$9}{ « $2%g}"
#song_columns_list_format=" (40)[yellow]{f} (6)[green]{l} (35)[red]{a} (30)[green]{b} "
#song_status_format = "$4%a $7» $3%b $7» $8%t$1"
alternative_header_second_line_format = "$2%a$9 - $4%b$9{ $4(%y)}"
#now_playing_prefix = "$b"
#now_playing_suffix = "$9$/b"

#song_window_title_format = ""
