song_list_format = "$9 $2%a$9 $1{¦$9 $8%b}{ (%y)}$9 $R$1$4%t$1$9 $1¦$9 $1%l$9 "
song_columns_list_format = "(4f)[black]{y} (40)[default]{t|f} (8f)[black]{l} (25)[red]{a} (30)[blue]{b}"
