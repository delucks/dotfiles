histogram() {
  if [[ $# -lt 1 ]]
  then
    # changed 2016-02-21: this is useful default behavior
    sort | uniq -c | sort -n
  elif [[ $# -lt 2 ]]
  then
    COL="\$$1"
    awk "{print $COL}" | sort | uniq -c | sort -n
  else
    COL="\$$1"
    awk -F"$2" "{print $COL}" | sort | uniq -c | sort -n
  fi
  return 0
}

