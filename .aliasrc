# functions 
note() {
	if [ $# -lt 1 ];
	then
		echo "Required one argument, name of note"
		return 1
	fi
	FILE="$HOME/notes/$1.txt"
	if [ -f $FILE ];
	then
		echo "$FILE exists"
		vim "$FILE"
	else
		touch "$FILE"
		echo "$1" | figlet > "$FILE"
		echo "Note from $(date)" >> "$FILE"
		vim "$FILE"
	fi
}

ccd() {
	if [ $# -lt 2 ];
	then
		echo "Use: ccd {file} {dir}"
		return 1
	fi
	FILE="$1"
	if [ ! -f "$FILE" ];
	then
		echo "File not found"
		return 1
	fi
	DIR="$2"
	if [ ! -d "$DIR" ];
	then
		echo "Dir not found"
		return 1
	fi
	cp -r "$FILE" "$DIR"
	cd "$DIR"
	pwd
}

